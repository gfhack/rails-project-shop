<h1>
  <%= t('listing', name: t('product.name', count: 2)) %>
</h1>

<table class="table table-striped table-hover table-sm">
  <thead>
    <tr>
      <th scope="col">
        <%= t('name') %>
      </th>
      <th scope="col">
        <%= t('actions') %>
      </th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td>
          <%= product.name %>
        </td>
        <td>
          <div class="btn-group btn-group-sm" role="group">
            <%= link_to product, class: 'btn btn-info', role: :button do %>
              <%= fa_icon 'search' %>
            <% end %>
            <%= link_to edit_product_path(product), class: 'btn btn-warning', role: :button do %>
              <%= fa_icon 'edit' %>
            <% end %>
            <%= link_to product, method: :delete, data: { confirm: t('confirm_destroy') }, class: 'btn btn-danger', role: :button do %>
              <%= fa_icon 'trash' %>
            <% end %>
          </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= will_paginate @products, renderer: BootstrapPagination::Rails %>

<br>

<%= link_to t('new', name: t('product.name', count: 1)), new_product_path, class: 'btn btn-primary', role: :button %>
