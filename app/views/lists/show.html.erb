<h1>
  <%= t('listing', name: t('list.name', count: 1)) %>
</h1>

<table class="table table-striped table-hover">
  <tr>
    <th scope="row">
      <%= t('list.name', count: 1) %>:
    </th>
    <td>
      <%= @list.name %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      <%= t('list.bought') %>:
    </th>
    <td>
      <%= @list.bought %>
    </td>
  </tr>
  <% @list.items.each do |item| -%>
  <tr>
    <th scope="row">
      <%= t('product.name', count: 1) %>:
    </th>
    <td>
      <%= item.product.name %>
    </td>
  </tr>
  <% end -%>
</table>

<%= link_to t('edit'), edit_list_path(@list), class: 'btn btn-primary', role: :button %>
<%= link_to t('index'), lists_path, class: 'btn btn-outline-secondary', role: :button %>
