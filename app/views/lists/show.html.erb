<h1>
  <%= t('listing', name: t('list.name', count: 1)) %>
</h1>

<table class="table table-striped table-hover">
  <tr>
    <th scope="row">
      <%= t('list.name', count: 1) %>:
    </th>
    <td>
      <%= @list.name %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      <%= t('list.bought') %>:
    </th>
    <td>
      <% if @list.bought %>
        <%= t('list.bought') %>
      <% else %>
        <%= t('list.not_bought') %>
      <% end %>
    </td>
  </tr>
  <% @list.products.each do |product| -%>
  <tr>
    <th scope="row">
      <%= t('product.name', count: 1) %>:
    </th>
    <td>
      <%= product.name %>
    </td>
  </tr>
  <% end -%>
</table>

<%= link_to t('edit'), edit_list_path(@list), class: 'btn btn-primary', role: :button %>
<%= link_to t('index'), lists_path, class: 'btn btn-outline-secondary', role: :button %>
