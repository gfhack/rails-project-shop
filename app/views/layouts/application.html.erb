<!DOCTYPE html>
<html>
  <head>
    <title>
      PÃ³s
    </title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <%= link_to root_path, class: 'navbar-brand' do %>
        <%= fa_icon 'home' %>
      <% end %>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#menu" aria-controls="menu" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div  id="menu" class="collapse navbar-collapse">
        <div class="navbar-nav mr-auto">
          <%= link_to t('products'), products_path, class: 'nav-item nav-link' %>
        </div>

        <div class="navbar-nav">
          <li class="nav-item dropdown">
            <a id="config" class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
              <%= t('menu') %>
            </a>
            <div class="dropdown-menu" aria-labelledby="config">
              <%= link_to 'pt-BR', root_path(locale: 'pt-BR'), class: 'dropdown-item' %>
              <%= link_to 'en', root_path(locale: 'en'), class: 'dropdown-item' %>

              <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, method: :delete, class: 'dropdown-item') %>
              <% end %>
            </div>
          </li>
        </div>
      </div>
    </nav>

    <main class="container mt-2" role="main">
      <%= render 'flash' %>

      <%= yield %>
    </main>
  </body>
</html>
